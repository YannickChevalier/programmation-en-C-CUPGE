% On se donne la possibilit{\'e} d'inclure des solutions, qui seront
% comment{\'e}es ou non.

\RequirePackage{comment}
\newif\ifsolution
\AtBeginDocument{%
  \ifsolution
    \includecomment{solution}
  \else
    \excludecomment{solution}
  \fi
}

