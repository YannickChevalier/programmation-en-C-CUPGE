% C style definitions


\newrgbcolor{stringcolor}{0 0.3 0}
\newrgbcolor{commentcolor}{0 0 0.4}
\newrgbcolor{functioncolor}{0.4 0 0}
\newrgbcolor{typecolor}{0.3 0 0.3}
\newrgbcolor{preproccolor}{0.1 0 0.6}
\newrgbcolor{keywordcolor}{0 0.4 0.4}

\newcommand{\imp}[1]{\textcolor{red}{#1}}
\newcommand{\mimp}[1]{\textcolor{red}{\ensuremath{#1}}}

\newcommand{\bslash}{\ensuremath{\backslash}}
\newcommand{\cinclude}[1]{\textcolor{preproccolor}{\#include #1}}
\newcommand{\cpp}[1]{\textcolor{preproccolor}{\# #1}}
\newcommand{\cfun}[1]{\textcolor{functioncolor}{#1}}
\newcommand{\ctype}[1]{\textcolor{typecolor}{#1}}
\newcommand{\cstring}[1]{\textcolor{stringcolor}{"#1"}}
\newcommand{\ccomment}[1]{\textcolor{commentcolor}{/* #1 */}}
\newcommand{\ckeyword}[1]{\textcolor{keywordcolor}{#1}}

\newcommand{\cmain}{\cfun{main}}
\newcommand{\cmaindef}{\ctab\cint\\%
\cmain(\cint argc, \cchar * argv[]) \lb \\}
\newcommand{\cprintf}[1]{\cfun{printf}(#1)}

\newcommand{\cint}{\ctype{int }}
\newcommand{\cchar}{\ctype{char }}
\newcommand{\cvoid}{\ctype{void }}
\newcommand{\cfloat}{\ctype{float }}

\newcommand{\stdio}{\textcolor{blue}{stdio}}

\newcommand{\cnl}{\ensuremath{\backslash n}}
\newcommand{\diff}{\ensuremath{\ !\!=}}

\newcommand{\cif}{\ckeyword{if }}
\newcommand{\celse}{\ckeyword{else }}
\newcommand{\cfor}{\ckeyword{for }}
\newcommand{\cwhile}{\ckeyword{while }}
\newcommand{\cswitch}{\ckeyword{switch }}
\newcommand{\cdefault}{\ckeyword{default}\addtolength{\tablength}{2em}}
\newcommand{\ccase}[1]{\ckeyword{case }#1:\item\hspace{2em}\begin{itemize}}
\newcommand{\cbreak}{\ckeyword{break };\end{itemize}}
\newcommand{\cdo}{\ckeyword{do }}
\newcommand{\cnon}{\ckeyword{!}}
\newcommand{\cou}{\ckeyword{\ensuremath{\vert\,\vert}}}
\newcommand{\cet}{\ckeyword{\ensuremath{\&\&}}}
\newcommand{\creturn}{\ckeyword{return }}
\newcommand{\n}{\ensuremath{\backslash}n}
\newcommand{\ctab}{\item[]}
\newcommand{\lb}{\ensuremath{\lbrace}\item\hspace{2em}\begin{itemize}}
\newcommand{\rb}{\end{itemize}\ensuremath{\rbrace}}
