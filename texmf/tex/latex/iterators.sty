\NeedsTeXFormat{LaTeX2e}[1998/06/01]
\ProvidesPackage{iterators}

\def\makeconstant#1#2{%
\expandafter\def\csname #1\endcsname{%
\ensuremath{\operatorname{#2}}}
}
\def\makefunction#1#2{%
  \expandafter\newcommand\csname #1\endcsname[2][]%
  {\ensuremath{\operatorname{#2}_{\rm ##1}(##2)}}
}
\def\makecal#1#2{%
\expandafter\def\csname #1\endcsname{\ensuremath{\mathcal{#2}}\xspace}
}
\def\makeded#1#2{%
\expandafter\def\csname #1\endcsname{%
\ensuremath{\mathcal{D}_{\textrm{\footnotesize #1}}\xspace}
}}

\def\constant@iterator#1{\@expandtwoargs\makeconstant{#1}{#1}}
\def\function@iterator#1{\@expandtwoargs\makefunction{#1}{#1}}
\def\cal@iterator#1{\@expandtwoargs\makecal{#1}{#1}}
\def\ded@iterator#1{\@expandtwoargs\makeded{#1}{#1}}


\def\apply@iterator#1#2{\@for\p@arg:=#1\do{%
\edef\arg{\expandafter\@firstofone\p@arg}
\csname #2@iterator\endcsname\arg\relax
}}

\def\MakeFunctions#1{\apply@iterator{#1}{function}}
\def\MakeConstants#1{\apply@iterator{#1}{constant}}
\def\MakeCal#1{\apply@iterator{#1}{cal}}
\def\MakeDed#1{\apply@iterator{#1}{ded}}
